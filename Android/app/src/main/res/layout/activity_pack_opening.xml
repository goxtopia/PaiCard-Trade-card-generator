<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- PACK VIEW (Initial State) -->
    <LinearLayout
        android:id="@+id/packContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Open"
            android:textColor="?attr/colorTertiary"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:layout_marginBottom="32dp"/>

        <FrameLayout
            android:id="@+id/packItem"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:background="@drawable/bg_card_pack"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARD PACK"
                    android:textColor="?attr/colorTertiary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/packCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contains X Cards"
                    android:textColor="#ECF0F1"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- GRID VIEW (Revealed State) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/gridTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Cards"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToPacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.Material3.Button.TextButton"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/gridTitle"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
