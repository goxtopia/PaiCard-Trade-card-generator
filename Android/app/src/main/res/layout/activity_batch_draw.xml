<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- UPLOAD VIEW -->
    <LinearLayout
        android:id="@+id/uploadContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Packs"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnPickImages"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Select Images"
            android:backgroundTint="#3498db"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/fileCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 files selected"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnCreatePacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE PACKS"
            android:backgroundTint="#7f8c8d"
            android:textColor="#2c3e50"
            android:enabled="false"/>

        <TextView
            android:id="@+id/processingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing..."
            android:textColor="#f1c40f"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- PACK VIEW -->
    <LinearLayout
        android:id="@+id/packContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Packs"
            android:textColor="#f1c40f"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:layout_marginBottom="32dp"/>

        <FrameLayout
            android:id="@+id/packItem"
            android:layout_width="180dp"
            android:layout_height="260dp"
            android:background="@drawable/bg_card_pack"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARD PACK"
                    android:textColor="#f1c40f"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="serif"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Open"
                    android:textColor="#ECF0F1"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/packCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contains X Cards"
                    android:textColor="#AAAAAA"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- GRID VIEW -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/gridTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opened Pack"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnBackToPacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Small"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/gridTitle"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
